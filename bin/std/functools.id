/**
 * Provides function decorators for various purposes
 * @module std/functools
 * @author SplittyDev
 */

/**
 * Decorator to achieve automatic memoization
 * by caching the return values.
 */
func memoize (f) {
    cache = Dict ()
    hits = 0
    misses = 0
    func wrapper (*args) {
        key = args
        if (cache.contains (key)) {
            hits += 1
            return cache [key]
        }
        misses += 1
        return (cache [key] = f (*args))
    }
    return wrapper
}